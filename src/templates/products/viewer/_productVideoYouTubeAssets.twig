{%- if entry.productVideoYouTubeAssets | length -%}
  {%- for vidAsset in entry.productVideoYouTubeAssets.all() -%}
    {%- set vid = craft.embeddedAssets.get(vidAsset) -%}
    <div
      class="carousel__slide slide-product-video"
      data-fancybox="product-gallery"
      data-src="{{ vid.url }}"
      data-caption="{{ vid.title }}"
      data-type="video"
      data-width="100%"
      data-height="100%"
    >
      <img
        src="https://i.ytimg.com/vi/{{ vid.getVideoId() }}/hqdefault.jpg"
        alt="{{ vid.title }} thumbnail image"
        style="max-width: 100%; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 100%; aspect-ratio: 4/3;"
      >
      <span class="button-overlay">
        <?xml version="1.0"?><svg fill="#000000" xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 24 24" width="24px" height="24px"><path d="M12,2C6.477,2,2,6.477,2,12c0,5.523,4.477,10,10,10s10-4.477,10-10C22,6.477,17.523,2,12,2z M10,15.5v-7 c0-0.412,0.47-0.647,0.8-0.4l4.667,3.5c0.267,0.2,0.267,0.6,0,0.8L10.8,15.9C10.47,16.147,10,15.912,10,15.5z"/></svg>
      </span>
    </div><!-- /carousel__slide-->

  {%- endfor -%}
{%- endif -%}
