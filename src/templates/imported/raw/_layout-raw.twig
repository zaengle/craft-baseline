{% requireLogin %}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{ tmplName }}</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.0/css/bulma.min.css">
  <style>
    img, form, iframe, object, video { display: none; }
    .module-item span.title { display: block; font-size: 16px; margin: 0; }
    td .container { width: auto; }
  </style>
</head>
<body>
  <section class="section">
    <div class="container is-fluid">

      {% if craft.app.request.getSegment(2) | length %}
        <a href="/raw/" class="button is-small is-pulled-right">&larr; RAW HOME</a>
      {% endif %}
      
      <h1 class="title">{{ tmplName }}</h1>
      {% block content %}{% endblock %}
    </div>
  </section>
</body>
</html>
