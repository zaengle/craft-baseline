      }
    });

    const mainCarousel = new Carousel(document.querySelector("#main-carousel"), {
      Dots: false,
    });

    const thumbCarousel = new Carousel(document.querySelector("#thumb-carousel"), {
      Sync: {
        target: mainCarousel,
      },
      Dots: false,
      Navigation: false,
      infinite: false,
      center: true,
      slidesPerPage: 1      
    });


  </script>

{% endblock %}